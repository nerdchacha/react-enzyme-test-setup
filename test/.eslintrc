{
  "parser": "babel-eslint",
  "rules": {
    "arrow-parens": 0,
    "generator-star-spacing": 1,
    "mocha/no-exclusive-tests": 2,
    "mocha/no-mocha-arrows": 2,
    "mocha/no-skipped-tests": 2,
    "no-unused-vars": 0,
    "prefer-arrow-callback": 0,
    "react/no-find-dom-node": 0
  },
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "__DEV__": true,
    "PAGE_TIMEOUT": 1000,
    "WEB_SERVER": true
  },
  "extends": [
    "standard",
    "standard-react"
  ]
}
